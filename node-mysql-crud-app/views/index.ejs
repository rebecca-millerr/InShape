<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (users.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Password</th>
                        <th scope="col">Birth</th>
                        <th scope="col">Sex</th>
                        <th scope="col">Height</th>
                        <th scope="col">Weight</th>
                        <th scope="col">BMI</th>
                        <th scope="col">BMI Goal</th>
                        <th scope="col">Created</th>
                        <th scope="col">Modified</th>

                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                        <tr>
                            <th scope="row"><%= user.id %></th>
                            <td><%= user.first_name %></td>
                            <td><%= user.last_name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.password %></td>
                            <td><%= user.birth %></td>
                            <td><%= user.sex %></td>
                            <td><%= user.height %></td>
                            <td><%= user.weight %></td>
                            <td><%= user.bmi %></td>
                            <td><%= user.bmi_goal %></td>
                            <td><%= user.created %></td>
                            <td><%= user.modified %></td>

                            <td>
                                <a href="/edit/<%= user.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= user.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No users found. Go <a href="/add" >here</a> to add users.</p>
        <% } %>
    </div>
</div>
</body>
</html>